package com.dinesh.springboot.firstspringbootapp.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.SessionAttributes;

import com.dinesh.springboot.firstspringbootapp.service.LoginService;

@Controller
@SessionAttributes("name")
public class LoginCOntroller {

	@Autowired
	LoginService service;

	@GetMapping("/")
	public String showLogin(ModelMap model) {
		model.put("name", "dinesh");
		return "welcome";
	}

	@PostMapping("/login")
	public String showWelcome(ModelMap model, @RequestParam String name, @RequestParam String password) {

		boolean isValidUser = service.validateUser(name, password);
		if (!isValidUser) {
			model.put("errorMessage", "Invalid Credentials");
			return "login";
		}
		model.put("name", name);
		model.put("password", password);
		return "welcome";
	}
}
